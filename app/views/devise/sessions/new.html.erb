<div class=TOP>
<h2>Log in</h2>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
 <div class = input-form>
  <div class="field">
    <%= f.label :email, class:"form_name" %><br />
    <%= f.email_field :email, class:"form_field", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード, class:"form_name" %><br />
    <%= f.password_field :password, class:"form_field", autocomplete: "new-password"%>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="submit_btn">
   <a><%= f.submit "Log in", class:"btn btn-border" %></a>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>