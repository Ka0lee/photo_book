<div class=TOP>
<h2 class=sign-up>Sign up</h2>
</div>

<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
  <div class="error_explanation" >
  <%= render "devise/shared/error_messages", resource: resource %>
  </div>
<div class = input-form>

  <div class="field">
    <%= f.label :ニックネーム, class:"form_name" %><br />
    <%= f.text_field :nickname, class:"form_field", autofocus: true, autocomplete: "nickname" %>
  </div>

  <div class="field">
    <%= f.label :email, class:"form_name" %><br />
    <%= f.email_field :email, class:"form_field", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード, class:"form_name" %><br />
    <%= f.password_field :password, class:"form_field", autocomplete: "new-password", placeholder:"6文字以上の半角英数字" %>
  </div>

  <div class="field">
    <%= f.label :パスワード確認用, class:"form_name" %><br />
    <%= f.password_field :password_confirmation, class:"form_field", autocomplete: "new-password" %>
  </div>

<div class=submit_btn>
<a><%= f.submit "Sign up", class:"btn btn-border" %></a>
</div>

  <% end %>


    <%= render "devise/shared/links" %>


</div>